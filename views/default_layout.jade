extends layout
block pagestyle
    style(type='text/css').
        body {
            padding-top: 4em;
        }
        html,
        body {
            height: 100%;
            /* The html and body elements cannot have any padding or margin. */
        }

        /* Wrapper for page content to push down footer */
        #wrap {
            min-height: 100%;
            height: auto !important;
            height: 100%;
            /* Negative indent footer by its height */
            margin: 0 auto -3em;
            /* Pad bottom by footer height */
            padding: 0 0 3em;
        }

        /* Set the fixed height of the footer here */
        #footer {
            height: 3em;
            background-color: #f5f5f5;
        }
block body
    div#wrap
        div.navbar.navbar-inverse.navbar-fixed-top
            div.container(style="margin-left: 0px; margin-top: 5px;")
                div.navbar-header
                    p.navbar-brand DigiPen Competition Database
                div
                    ul.nav.navbar-nav.navbar-inverse
                        if locals.breadcrumbs
                            each url, name in locals.breadcrumbs
                                if url=="#"
                                    li.active
                                        a
                                            =name
                                else if url
                                    li
                                        a(href=url)
                                            =name
                                else
                                    li
                                        a
                                            =name
        div.container
            div.row.clearfix
                block content
        div#push
    div#footer
